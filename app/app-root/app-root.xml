<nsDrawer:RadSideDrawer id="sideDrawer" xmlns:nsDrawer="nativescript-ui-sidedrawer" loaded="onLoaded">
    <nsDrawer:RadSideDrawer.drawerTransition>
        <nsDrawer:SlideInOnTopTransition/>
