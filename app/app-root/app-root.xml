                    </GridLayout>

                    <GridLayout columns="auto, *" class="{{ 'sidedrawer-list-item' + (selectedPage === 'Search' ? ' selected': '') }}"
                        route="search/search-page" title="Search" tap="onNavigationItemTap">
                        <Label row="0" col="0" text="&#xf002;" class="fa" />
